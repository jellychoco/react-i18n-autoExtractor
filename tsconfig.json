{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": ["es2015"],
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/__tests__/*"]
}
